<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="3dp"
    android:layout_weight=".28"
    android:background="#FFFFFF"

    android:orientation="horizontal">

    <Spinner
        android:id="@+id/spinner2"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:background="#f0f0f0"
        android:popupBackground="#f0f0f0"
        android:layout_marginLeft="5dp"
        android:spinnerMode="dropdown" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#f0f0f0"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/arrow1" />

    <TextView
        android:text="Action Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner2"
        android:lineSpacingExtra="8sp" />

    <TextView
        android:text="Gesture Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/gestureDescription"
        android:layout_alignParentStart="true"
        android:lineSpacingExtra="8sp"
        android:layout_marginEnd="50dp"
        android:paddingBottom="30dp" />

    <TextView
        android:text="Action Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:id="@+id/actionDescription"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a trigger:"
        android:textSize="24sp"
        android:textColor="#000"
        android:gravity="center"
        android:id="@+id/text"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/actionDescription"
        android:layout_alignStart="@+id/actionDescription" />

    <TextView
        android:text="Gesture Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gestureDescription"
        android:layout_marginBottom="28dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:paddingTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinner2" />

</RelativeLayout>